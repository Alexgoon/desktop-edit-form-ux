                        <TextBlock Text="Email"
                                   Margin="0,10,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Grid.Row="4" />
                        <TextBox VerticalAlignment="Center"
                                 Margin="10,10,0,0"
                                 Grid.Column="1"
                                 Grid.ColumnSpan="3"
                                 Grid.Row="4" />

                        <TextBlock Text="Phone"
                                   Margin="0,10,0,0"
