                            <TextBox Width="200"
                                     Margin="20,0,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="20,10,0,0">
                            <TextBlock Text="State" />
                            <TextBox Width="200"
                                     Margin="20,0,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="20,10,0,0">
                            <TextBlock Text="City" />
                            <TextBox Width="200"
                                     Margin="20,0,0,0" />
