                                 Grid.Row="2" />
                        <TextBlock Text="State"
                                   Margin="0,10,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Grid.Row="3" />
                        <TextBox VerticalAlignment="Center"
                                 Margin="10,10,0,0"
                                 Grid.Column="1"
                                 Grid.Row="3" />

                        <TextBlock Text="Zip Code"
